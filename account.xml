<tryton>
    <data>
      <record model="ir.ui.menu" id="account_payment.menu_move_line_form">
          <field name="active" eval="False"/>
      </record>

      <record model="ir.ui.view" id="sale_view_list">
          <field name="model">sale.sale</field>
          <field name="type">tree</field>
          <field name="priority" eval="20"/>
          <field name="name">sale_tree</field>
      </record>

      <record model="ir.action.act_window" id="act_receivable_form">
        <field name="name">Por cobrar</field>
        <field name="res_model">sale.sale</field>
        <field name="domain">[('party', '!=', None), ('state', '=', 'processing'), ('invoice_state', '=', 'waiting')]</field>
      </record>

      <record model="ir.action.act_window.view" id="act_receivable_form_view1">
        <field name="sequence" eval="10"/>
        <field name="view" ref="sale_view_list"/>
        <field name="act_window" ref="act_receivable_form"/>
      </record>

      <menuitem parent="account_payment.menu_payments" action="act_receivable_form"
        sequence="3" id="menu_receivable_form"/>

      <record model="ir.ui.view" id="purchase_view_list">
        <field name="model">purchase.purchase</field>
        <field name="type">tree</field>
        <field name="priority" eval="20"/>
        <field name="name">purchase_tree</field>
      </record>

      <record model="ir.action.act_window" id="act_payable_form">
        <field name="name">Por pagar</field>
        <field name="res_model">purchase.purchase</field>
        <field name="domain">[('party', '!=', None), ('invoice_state', '=', 'waiting')]</field>
      </record>

      <record model="ir.action.act_window.view" id="act_payable_form_view1">
        <field name="sequence" eval="10"/>
        <field name="view" ref="purchase_view_list"/>
        <field name="act_window" ref="act_payable_form"/>
      </record>

      <menuitem parent="account_payment.menu_payments" action="act_payable_form"
        sequence="2" id="menu_payable_form"/>
    </data>
</tryton>
